@model BlogUpdateDto

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
                Məhsulu dəyişdir
            </p>
            <form method="post" class="forms-sample" enctype="multipart/form-data">

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-group">

                    <input asp-for="@Model.BlogDetails[0].LanguageId" value="1" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputUsername1 ">Azərbaycanca ad</label>
                        <input class="form-control blogName" required asp-for="@Model.BlogDetails[0].Name" placeholder="Başlıq daxil edin">
                        <span asp-validation-for="@Model.BlogDetails[0].Name" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label for="exampleInputUsername1 ">Azərbaycanca açıqlama</label>
                        <textarea class="form-control blogDescription" id="description0" asp-for="@Model.BlogDetails[0].Description" placeholder="Açıqlama daxil edin"></textarea>
                        <span asp-validation-for="@Model.BlogDetails[0].Description" class="text-danger"></span>
                    </div>




                </div>

                <hr />
                <br />
                <br />

                <div class="form-group">

                    <input asp-for="@Model.BlogDetails[1].LanguageId" value="2" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputUsername1 ">İngiliscə ad</label>
                        <input class="form-control blogName" required asp-for="@Model.BlogDetails[1].Name" placeholder="Başlıq daxil edin">
                        <span asp-validation-for="@Model.BlogDetails[1].Name" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label for="exampleInputUsername1 ">İngiliscə açıqlama</label>
                        <textarea class="form-control blogDescription" id="description1" asp-for="@Model.BlogDetails[1].Description" placeholder="Açıqlama daxil edin"></textarea>
                        <span asp-validation-for="@Model.BlogDetails[1].Description" class="text-danger"></span>
                    </div>


                </div>

                <hr />
                <br />
                <br />

                <div class="form-group">

                    <input asp-for="@Model.BlogDetails[2].LanguageId" value="3" type="hidden" />
                    <div class="form-group">
                        <label for="exampleInputUsername1 ">Rusca ad</label>
                        <input class="form-control blogName" required asp-for="@Model.BlogDetails[2].Name" placeholder="Başlıq daxil edin">
                        <span asp-validation-for="@Model.BlogDetails[2].Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputUsername1 ">Rusca açıqlama</label>
                        <textarea class="form-control blogDescription" id="description2" asp-for="@Model.BlogDetails[2].Description" placeholder="Açıqlama daxil edin"></textarea>
                        <span asp-validation-for="@Model.BlogDetails[2].Description" class="text-danger"></span>
                    </div>


                </div>

                <hr />
                <br />
                <br />

                <div class="form-group">
                    <label>
                        Kateqoriyalar

                    </label>
                    <br />
                    <select class="form-select form-select-sm" asp-for="BlogCategoryId" required>
                        <option value="@null" disabled selected>Kateqori seçin</option>
                        @foreach (var category in Model.BlogCategories ?? new())
                        {
                            <option value="@category.Id">@category.Name</option>
                        }

                    </select>
                </div>

                <hr />
                <br />
                <br />


                <div class="form-group">
                    <label for="exampleInputUsername1">Əsas şəkili seçin</label>
                    <img src="@Model.ImagePath" width="150" height="150" alt="MainImage" />
                    <input type="hidden" asp-for="ImagePath" />
                    <input class="form-control" accept="image/*" asp-for="Image">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>



                



                <button type="submit" class="btn btn-primary mr-2">Dəyişdir</button>
                <a class="btn btn-light" asp-action="Index">Ləğv et</a>
            </form>
        </div>
    </div>
</div>

