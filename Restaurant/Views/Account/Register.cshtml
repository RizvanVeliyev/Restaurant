 @model RegisterDto
 @inject AccountLocalizer _localizer

<main class="register">
    <section>
        <div class="loginBlack" style="height: 150px; background: #000;"></div>
    </section>
    <div class="content">
        <div class="booking-content">
            <div class="booking-image">
                <img class="booking-img" src="~/assets/images/menu/img_11.jpg" alt="Booking Image">
            </div>
            <div class="booking-form">
                <form id="booking-form" asp-action="Register" asp-controller="Account" method="post">
                    <h2>@_localizer.GetValue("Register")</h2>

                    <div class="form-group form-input">
                        <input asp-for="Name" class="form-control" />
                        <label asp-for="Name" class="form-label">@_localizer.GetValue("Your Name")</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group form-input">
                        <input asp-for="Surname" class="form-control" />
                        <label asp-for="Surname" class="form-label">@_localizer.GetValue("Your Surname")</label>
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>

                    <div class="form-group form-input">
                        <input asp-for="Username" class="form-control" />
                        <label asp-for="Username" class="form-label">@_localizer.GetValue("Your Username")</label>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group form-input">
                        <input asp-for="Email" class="form-control" type="email" />
                        <label asp-for="Email" class="form-label">@_localizer.GetValue("Your Email")</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group form-input">
                        <input asp-for="Password" class="form-control" type="password" />
                        <label asp-for="Password" class="form-label">@_localizer.GetValue("Your Password")</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group form-input">
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        <label asp-for="ConfirmPassword" class="form-label">@_localizer.GetValue("Confirm Password")</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-submit">
                        <input type="submit" value="@_localizer.GetValue("Register")" class="submit" id="submit" name="submit" />
                        <p> <input type="checkbox" name="submit" /> @_localizer.GetValue("Remember Me")</p>
                        <a href="#" class="vertify-booking">@_localizer.GetValue("Verify your booking info from your phone")</a>
                    </div>
                </form>

            </div>
        </div>

    </div>



</main>
