@model LoginDto
@inject AccountLocalizer _localizer
<main class="login">
    <section>
        <div class="loginBlack" style="height: 150px; background: #000;"></div>
    </section>
    <div class="content">
        <div class="booking-content">
            <div class="booking-image">
                <img class="booking-img" src="~/assets/images/home/restaurant-img-2.jpg" alt="Booking Image">
            </div>
            <div class="booking-form">
                <form id="booking-form" asp-action="Login" asp-controller="Account" method="post">
                    <h2>@_localizer.GetValue("Login")</h2>

                    <div class="form-group form-input">
                        <input asp-for="EmailOrUsername" class="form-control" />
                        <label asp-for="EmailOrUsername" class="form-label">@_localizer.GetValue("Your Email Or Username")</label>
                        <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
                    </div>

                    <div class="form-group form-input">
                        <input asp-for="Password" class="form-control" type="password" />
                        <label asp-for="Password" class="form-label">@_localizer.GetValue("Your Password")</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-submit">
                        <input type="submit" value="@_localizer.GetValue("Login")" class="submit" id="submit" name="submit" />
                      @*   <p> <input type="checkbox" name="submit" /> @_localizer.GetValue("Remember Me")</p>
                        <a href="#" class="vertify-booking">@_localizer.GetValue("Verify your booking info from your phone")</a> *@
                    </div>
                </form>

            </div>
        </div>

    </div>



</main>
