@model LoginDto
<main class="login">
    <section>
        <div class="loginBlack" style="height: 150px; background: #000;"></div>
    </section>
    <div class="content">
        <div class="booking-content">
            <div class="booking-image">
                <img class="booking-img" src="~/assets/images/home/restaurant-img-2.jpg" alt="Booking Image">
            </div>
            <div class="booking-form">
                <form id="booking-form" asp-action="Login" asp-controller="Account" method="post">
                    <h2>Log In</h2>

                    <div class="form-group form-input">
                        <input asp-for="EmailOrUsername" class="form-control" />
                        <label asp-for="EmailOrUsername" class="form-label">Your Email Or Username</label>
                        <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
                    </div>

                    <div class="form-group form-input">
                        <input asp-for="Password" class="form-control" type="password" />
                        <label asp-for="Password" class="form-label">Your Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-submit mt-4">
                        <input type="submit" value="Login" class="btn btn-primary" />
                        <div class="form-check mt-3">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                            <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                        </div>
                        <a href="#" class="vertify-booking mt-2 d-block">Verify your booking info from your phone</a>
                    </div>
                </form>

            </div>
        </div>

    </div>



</main>
