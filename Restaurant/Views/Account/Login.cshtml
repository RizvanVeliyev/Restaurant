<main class="login">
    <section>
        <div class="loginBlack" style="height: 150px; background: #000;"></div>
    </section>
    <div class="content">
        <div class="booking-content">
            <div class="booking-image">
                <img class="booking-img" src="~/assets/images/home/restaurant-img-2.jpg" alt="Booking Image">
            </div>
            <div class="booking-form">
                <form id="booking-form">
                    <h2>Log In</h2>

                    <div class="form-group form-input">
                        <input type="text" name="name" id="name" value="" required />
                        <label for="name" class="form-label">Your Email Or Username</label>
                    </div>
                    <div class="form-group form-input">
                        <input type="password" name="phone" id="phone" value="" required />
                        <label for="phone" class="form-label">Your Password</label>
                    </div>



                    <div class="form-submit">
                        <input type="submit" value="Login" class="submit" id="submit" name="submit" />
                        <p> <input type="checkbox" name="submit" /> Remember Me</p>
                        <a href="#" class="vertify-booking">Verify your booking info from your phone</a>
                    </div>
                </form>
            </div>
        </div>

    </div>



</main>
