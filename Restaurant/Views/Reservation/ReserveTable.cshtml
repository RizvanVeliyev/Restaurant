@inject ReservationLocalizer _localizer
<main class="reservation">
    <section id="News-banner">
        <div class="banner-part">
            <div class="banner-content">
                <h3>@_localizer.GetValue("make an online")</h3>
                <h1 class="bannerTitle">@_localizer.GetValue("Reservation")</h1>
                <p class="connection">
                    @_localizer.GetValue("Or call us at")
                    <span>00 40 555 1234</span>
                    @_localizer.GetValue("any day from")
                </p>
                <p class="yellow">10:00 AM - 07:00 PM</p>
            </div>
            <div class="overlay"></div>
        </div>
    </section>
    <div class="content">
        <div class="main">

            <div class="container">
                <div class="booking-content">
                    <div class="booking-image">
                        <img class="booking-img" src="/assets/images/reservation/form-img.jpg" alt="Booking Image">
                    </div>
                    <div class="booking-form">
                        <form id="booking-form" asp-action="ReserveTable" asp-controller="Reservation" method="post">

                            <h2>@_localizer.GetValue("Booking place for your dinner!")</h2>
                            <div class="form-group form-input">
                                <input type="text" name="Name" id="name" value="" required />
                                <label for="name" class="form-label">@_localizer.GetValue("Your Name")</label>
                            </div>
                            <div class="form-group form-input">
                                <input type="number" name="PhoneNumber" id="phone" value="" required />
                                <label for="phone" class="form-label">@_localizer.GetValue("Your Phone Number")</label>
                            </div>
                            <div class="form-group form-input">
                                <input type="date" name="Date" id="date" value="" min="" max="" required />
                                <label for="date" class="form-label"></label>
                            </div>

                            <div class="form-group">
                                <div class="select-list">
                                    <select name="Time" id="time" required>
                                        <option value="">@_localizer.GetValue("Time")</option>
                                        <option value="6pm">6:00 PM</option>
                                        <option value="7pm">7:00 PM</option>
                                    </select>
                                </div>
                            </div>
                          @*   <div class="form-group">
                                <div class="select-list">
                                    <select name="Food" id="food" required>
                                        <option value="">@_localizer.GetValue("Food")</option>
                                        <option value="seasonalfish">Seasonal steamed fish</option>
                                        <option value="assortedmushrooms">Assorted mushrooms</option>
                                    </select>
                                </div>
                            </div> *@
                            <div class="form-radio">
                                <label class="label-radio"> @_localizer.GetValue("Select Your Dining Space")</label>
                                <div class="radio-item-list">
                                    <span class="radio-item">
                                        <input type="radio" name="NumberOfPeople" value="2" id="number_people_2" />
                                        <label for="number_people_2">2</label>
                                    </span>
                                    <span class="radio-item active">
                                        <input type="radio" name="NumberOfPeople" value="4" id="number_people_4" checked="checked" />
                                        <label for="number_people_4">4</label>
                                    </span>
                                    <span class="radio-item">
                                        <input type="radio" name="NumberOfPeople" value="6" id="number_people_6" />
                                        <label for="number_people_6">6</label>
                                    </span>
                                    <span class="radio-item">
                                        <input type="radio" name="NumberOfPeople" value="8" id="number_people_8" />
                                        <label for="number_people_8">8</label>
                                    </span>
                                    <span class="radio-item">
                                        <input type="radio" name="NumberOfPeople" value="10" id="number_people_10" />
                                        <label for="number_people_10">10</label>
                                    </span>
                                </div>
                            </div>
 
                            <div class="form-submit">
                                <input type="submit" value="@_localizer.GetValue("Book now")" class="submit" id="submit" name="submit" />
                            </div>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>


</main>



<script>
    // Cari tarixi al
    const today = new Date();
    const yyyy = today.getFullYear();
    const mm = String(today.getMonth() + 1).padStart(2, '0'); // Aylar 0-dan başlayır, ona görə 1 əlavə olunur
    const dd = String(today.getDate()).padStart(2, '0');

    // Bugünkü tarixi "min" üçün təyin et
    const minDate = `${yyyy}-${mm}-${dd}`;
    document.getElementById("date").setAttribute("min", minDate);

    // 1 ay sonranı "max" üçün təyin et
    const nextMonth = new Date(today);
    nextMonth.setMonth(nextMonth.getMonth() + 1); // 1 ay əlavə edilir
    const maxYyyy = nextMonth.getFullYear();
    const maxMm = String(nextMonth.getMonth() + 1).padStart(2, '0');
    const maxDd = String(nextMonth.getDate()).padStart(2, '0');

    const maxDate = `${maxYyyy}-${maxMm}-${maxDd}`;
    document.getElementById("date").setAttribute("max", maxDate);
</script>
