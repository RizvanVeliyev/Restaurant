@model ContactDto
@inject ContactLocalizer _localizer

<main class="contact">
    <section id="News-banner">
        <div class="banner-part">
            <div class="banner-content">
                <h3>Restaurant</h3>
                <h1>@_localizer.GetValue("Contact")</h1>
                <p class="connection">
                    juicy flavours
                </p>
            </div>
            <div class="overlay"></div>
        </div>
    </section>

    <div class="content inner-pg contact-content">
        <div class="container">
            <div class="row">
                <div class="col-sm-10 col-md-8 col-centered">
                    <h5>contact details</h5>

                    <form class="dn__contact-form" asp-action="Index" asp-controller="Contact" method="post">
                        <div class="row">
                            <div class="col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputtext1">@_localizer.GetValue("Name")</label>
                                    <input type="text" class="form-control" name="Name" id="exampleInputtext1">
                                </div>
                            </div>

                            <div class="col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">@_localizer.GetValue("EmailInput")</label>
                                    <input type="email" class="form-control" name="Email" id="exampleInputEmail1">
                                </div>
                            </div>

                            <div class="col-sm-4 col-md-4">
                                <div class="form-group">
                                    <label for="exampleInputtext2">@_localizer.GetValue("Phone")</label>
                                    <input type="text" class="form-control" name="Phone" id="exampleInputtext2">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12 col-md-12">
                                <div class="js-cf-message"></div>
                                <div class="form-group">
                                    <label for="exampleInputtext3">@_localizer.GetValue("Message")</label>
                                    <textarea class="form-control" rows="7" name="Message" id="exampleInputtext3"></textarea>
                                </div>
                            </div>
                        </div>

                        <!--// Redirect on success (maybe to a Thank you page, whatever) It will only happen if you provide a URL in the value field -->
                        <input type="hidden" value="YOUR_REDIRECT_LINK" class="ky__redirect-to">

                        <div class="send-message">
                            <button type="submit" class="btn btn-default js-submit-form-button">@_localizer.GetValue("Submit")</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>